<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.onboard.FirstFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/some_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/floney_pretendard_bold"
            android:gravity="top"
            android:lineSpacingExtra="3sp"
            android:text="함께, 간편하게\n가계부를 기록해 보세요"
            android:textAppearance="@style/first_onboard_text"
            android:translationY="-1.28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/customBackground"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/onboard_area8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/some_id" />

        <ImageView
            android:id="@+id/list1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/list1"
            app:layout_constraintEnd_toEndOf="@+id/customBackground"
            app:layout_constraintStart_toStartOf="@+id/customBackground"
            app:layout_constraintTop_toTopOf="@+id/customBackground" />

        <ImageView
            android:id="@+id/list2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/list2"
            app:layout_constraintEnd_toEndOf="@+id/customBackground"
            app:layout_constraintStart_toStartOf="@+id/customBackground"
            app:layout_constraintTop_toBottomOf="@+id/list1" />

        <LinearLayout
            android:id="@+id/bg_daily_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_card_view"
            android:elevation="1dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/first_onboard_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:lineSpacingExtra="-3sp"
                        android:text="2023년"
                        android:textAppearance="@style/first_onboard_year" />

                    <TextView
                        android:id="@+id/first_onboard_month_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:lineSpacingExtra="-3sp"
                        android:text="5월 18일"
                        android:textAppearance="@style/first_onboard_month_day" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/first_onboard_btn_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="-2sp"
                    android:text="내역 추가"
                    android:textAppearance="@style/first_onboard_btn_" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_profile_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img___01" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/line1"
                        android:layout_width="52dp"
                        android:layout_height="12dp"
                        android:background="@drawable/onboard_area8" />

                    <View
                        android:id="@+id/line2"
                        android:layout_width="64dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/onboard_area8" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/line3"
                    android:layout_width="60dp"
                    android:layout_height="12dp"
                    android:background="@drawable/onboard_area6" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_profile_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/img___02"
                    app:layout_constraintStart_toStartOf="@+id/bg_daily_dialog"
                    app:layout_constraintTop_toBottomOf="@+id/image_profile_first" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/line5"
                        android:layout_width="48dp"
                        android:layout_height="12dp"
                        android:background="@drawable/onboard_area8" />

                    <View
                        android:id="@+id/line6"
                        android:layout_width="70dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/onboard_area8" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/line8"
                    android:layout_width="52dp"
                    android:layout_height="14dp"
                    android:background="@drawable/onboard_area6" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_profile_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img___03"
                    tools:layout_editor_absoluteY="64dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/line7"
                        android:layout_width="60dp"
                        android:layout_height="14dp"
                        android:background="@drawable/onboard_area8" />

                    <View
                        android:id="@+id/line9"
                        android:layout_width="52dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/onboard_area8" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/line4"
                    android:layout_width="80dp"
                    android:layout_height="12dp"
                    android:background="@drawable/onboard_area6" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/line10"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="68dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintEnd_toEndOf="@+id/list2"
            app:layout_constraintTop_toTopOf="@+id/list2" />

        <View
            android:id="@+id/line11"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintEnd_toEndOf="@+id/list2"
            app:layout_constraintTop_toTopOf="@+id/list2" />

        <View
            android:id="@+id/line12"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toEndOf="@+id/line11"
            app:layout_constraintTop_toTopOf="@+id/list2" />

        <View
            android:id="@+id/line13"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toEndOf="@+id/line11"
            app:layout_constraintTop_toBottomOf="@+id/line12" />


        <View
            android:id="@+id/line14"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toEndOf="@+id/line15"
            app:layout_constraintTop_toBottomOf="@+id/line24" />

        <View
            android:id="@+id/line15"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toEndOf="@+id/line17"
            app:layout_constraintTop_toBottomOf="@+id/list2" />

        <View
            android:id="@+id/line16"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toEndOf="@+id/line18"
            app:layout_constraintTop_toBottomOf="@+id/line17" />

        <View
            android:id="@+id/line17"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toEndOf="@+id/line19"
            app:layout_constraintTop_toBottomOf="@+id/list2" />

        <View
            android:id="@+id/line18"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="-8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toStartOf="@+id/list2"
            app:layout_constraintTop_toBottomOf="@+id/line19" />


        <View
            android:id="@+id/line19"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="-8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toStartOf="@+id/list2"
            app:layout_constraintTop_toBottomOf="@+id/list2" />

        <View
            android:id="@+id/line20"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toEndOf="@+id/line22"
            app:layout_constraintTop_toBottomOf="@+id/list2" />

        <View
            android:id="@+id/line21"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toEndOf="@+id/line23"
            app:layout_constraintTop_toBottomOf="@+id/line22" />

        <View
            android:id="@+id/line22"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toEndOf="@+id/line23"
            app:layout_constraintTop_toBottomOf="@+id/list2" />

        <View
            android:id="@+id/line23"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toEndOf="@+id/line24"
            app:layout_constraintTop_toBottomOf="@+id/list2" />

        <View
            android:id="@+id/line24"
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_daily_dialog"
            app:layout_constraintStart_toEndOf="@+id/line15"
            app:layout_constraintTop_toBottomOf="@+id/list2" />

        <TextView
            android:id="@+id/first_onboard_passbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="-2sp"
            android:text="건너뛰기"
            android:textAppearance="@style/first_onboard_passbtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bg_daily_dialog" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>