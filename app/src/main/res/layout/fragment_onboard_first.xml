<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.onboard.FirstFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/some_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/floney_pretendard_bold"
                android:gravity="top"
                android:lineSpacingExtra="3sp"
                android:text="함께, 간편하게\n가계부를 기록해 보세요"
                android:textAppearance="@style/first_onboard_text"
                android:translationY="-1.28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/customBackground"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/icon_calendar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/some_id" />

            <LinearLayout
                android:id="@+id/bg_daily_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_card_view"
                android:elevation="1dp"
                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/first_onboard_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:lineSpacingExtra="-3sp"
                            android:text="2023년"
                            android:textAppearance="@style/first_onboard_year" />

                        <TextView
                            android:id="@+id/first_onboard_month_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:lineSpacingExtra="-3sp"
                            android:text="5월 18일"
                            android:textAppearance="@style/first_onboard_month_day" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/first_onboard_btn_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-2sp"
                        android:text="내역 추가"
                        android:textAppearance="@style/first_onboard_btn_" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_profile_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img___01" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/line1"
                            android:layout_width="52dp"
                            android:layout_height="12dp"
                            android:background="@drawable/onboard_area8" />

                        <View
                            android:id="@+id/line2"
                            android:layout_width="64dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/onboard_area8" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <View
                        android:id="@+id/line3"
                        android:layout_width="60dp"
                        android:layout_height="12dp"
                        android:background="@drawable/onboard_area6" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_profile_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/img___02"
                        app:layout_constraintStart_toStartOf="@+id/bg_daily_dialog"
                        app:layout_constraintTop_toBottomOf="@+id/image_profile_first" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/line5"
                            android:layout_width="48dp"
                            android:layout_height="12dp"
                            android:background="@drawable/onboard_area8" />

                        <View
                            android:id="@+id/line6"
                            android:layout_width="70dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/onboard_area8" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <View
                        android:id="@+id/line8"
                        android:layout_width="52dp"
                        android:layout_height="14dp"
                        android:background="@drawable/onboard_area6" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_profile_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img___03"
                        tools:layout_editor_absoluteY="64dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/line7"
                            android:layout_width="60dp"
                            android:layout_height="14dp"
                            android:background="@drawable/onboard_area8" />

                        <View
                            android:id="@+id/line9"
                            android:layout_width="52dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/onboard_area8" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <View
                        android:id="@+id/line4"
                        android:layout_width="80dp"
                        android:layout_height="12dp"
                        android:background="@drawable/onboard_area6" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/first_onboard_passbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="-2sp"
                android:text="건너뛰기"
                android:textAppearance="@style/first_onboard_passbtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bg_daily_dialog" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>
